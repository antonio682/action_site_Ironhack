<h1>Create a new product</h1>

<form action="/products/create" method="POST">
	<input type="text" name="product[title]" placeholder="title" ></input>
	<input type="text" name="product[description]" placeholder="description"></input>
	<input type="date" name="product[deadline]" placeholder="deadline" ></input>
	<input type="hidden" name="authenticity_token"
      value="<%= form_authenticity_token %>">
	<button type="submit">Create</button>	
</form>